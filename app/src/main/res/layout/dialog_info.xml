<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewSignaturaNumber"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="7dp"
        android:background="#f69400"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewSignatura"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-23dp"
        android:textAlignment="center"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textViewinfoEdicion"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="15dp"
        android:background="#f69400"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewEdicion"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-23dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewinfoDfisica"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="15dp"
        android:background="#f69400"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewDfisica"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-23dp"
        android:textAlignment="center"
        android:textStyle="bold" />


    <!-- Puedes agregar más TextViews u otras vistas aquí para mostrar la información adicional del libro -->

</LinearLayout>
